# Using variables and going to next level to remove and control files in your editor
# Used PHONEY HERE without the %.o: %.c rule and omitted the .h file
CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

all: $(OBJ)
	$(CC) $(SRC) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re:oclean all
